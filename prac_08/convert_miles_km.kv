BoxLayout:
    orientation: 'vertical'
    padding: 20
    spacing: 10

    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: 0.5
        spacing: 8

        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.3
            spacing: 8

            Button:
                text: 'Up'
                background_color: (0.2, 0.2, 0.2, 1)
                color: (1, 1, 1, 1)
                font_size: 24
                on_press: app.handle_increment(1)

            Button:
                text: 'Down'
                background_color: (0.2, 0.2, 0.2, 1)
                color: (1, 1, 1, 1)
                font_size: 24
                on_press: app.handle_increment(-1)

        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.7
            spacing: 8

            TextInput:
                id: miles_input
                text: root.default_miles
                font_size: 32
                multiline: False
                foreground_color: (0, 0, 0, 1)
                background_color: (1, 1, 1, 1)
                on_text: app.calculate_km()

    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: 0.3
        spacing: 8

        Label:
            text: 'Result:'
            font_size: 28
            color: (1, 1, 1, 1)
            size_hint_x: 0.4
            bold: True

        Label:
            text: app.km_text
            font_size: 28
            color: (1, 1, 0, 1)
            size_hint_x: 0.7

    Widget:
        size_hint_y: 0.2